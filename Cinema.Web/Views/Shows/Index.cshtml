@model IEnumerable<Cinema.Web.Models.DTOs.ListShowDTO>

<h1>Mai műsorajánlat</h1>

<table class="table">
    <thead>
        <tr>
            <th>Cím</th>
            <th>Kezdés időpontja</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Start)
                </td>
                <td>
                    @Html.ActionLink("Foglalás", "Edit", "Shows",
                             new { @id = $"{item.Id}" },
                             item.FreeSeatCount <= 0
                             ? new { @class = "btn btn-primary" }
                             : new { @class = "btn btn-primary", @disabled = "" })
                </td>
            </tr>
        }
    </tbody>
</table>
