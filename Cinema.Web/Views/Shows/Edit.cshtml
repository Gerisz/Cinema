@using Cinema.Web.Models.Tables.Enums
@model Cinema.Web.Models.DTOs.ReserveSeatDTO

@{
    ViewData["Title"] = "Helyfoglalás";
}

<h1>Helyfoglalás</h1>

<h4>@Html.DisplayFor(_ => Model.Title) - @Html.DisplayFor(_ => Model.Start)</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ShowId" />
            <input type="hidden" asp-for="Title" />
            <input type="hidden" asp-for="Start" />
            <div class="form-group">
                <label asp-for="Name" class="control-label">Név</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PhoneNumber" class="control-label">Telefonszám</label>
                <input asp-for="PhoneNumber" class="form-control" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>

            <table class="seat-table table">
                <tbody>
                    @{
                        var rowCount = Model.Seats.MaxBy(s => s.Row)!.Row;
                        var columnCount = Model.Seats.MaxBy(s => s.Column)!.Column;
                    }
                    @for (Int32 i = 0; i < rowCount; i++)
                    {
                        <tr>
                            <td>
                                <b>@(i + 1)</b>
                            </td>
                            @for (Int32 j = 0; j < columnCount; j++)
                            {
                                <td>
                                    <div class="checkbox">
                                        <label>
                                            @Html.CheckBoxFor(m => m.Seats[i * columnCount + j].ToReserve,
                                                Model.Seats[i * columnCount + j].Reserved ? new { @disabled = "" } : new { })
                                            @(j + 1)
                                        </label>
                                    </div>
                                </td>
                            }
                            <td>
                                <b>@(i + 1)</b>
                            </td>
                        </tr>
                    }

                </tbody>
            </table>
            <div class="row form-group">
                <div class="col-sm-6">
                    <a asp-action="Index" class="btn btn-secondary">Vissza a mai műsorajánlathoz</a>
                </div>
                <div class="col-sm-6">
                    <input type="submit" value="Helyfoglalás véglegesítése" class="btn btn-primary" />
                </div>
            </div>

        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
