@model Cinema.Web.Models.DTOs.MovieDetails


<h1>@Html.DisplayFor(model => model.Title)</h1>
<hr />
<div class="row">
    <div class="col-sm-2">
        <img src="@Url.Action("DisplayImage", "Movies", new { id = Model.Id })"
             class="item" id="image" />
    </div>
    <div class="col-sm-10">
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Director)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Director)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Synopsis)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Synopsis)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Length)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Length)
            </dd>
        </dl>
    </div>
</div>
<hr />
<h2>Foglalás mai előadásra:</h2>
@foreach (var start in Model.Starts)
{
    @Html.ActionLink(start.Start.ToShortTimeString(), "Edit", "Shows",
                            new { @id = $"{start.Id}" },
                            new { @class = "btn btn-primary m-1" })
}
