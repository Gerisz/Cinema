<Window x:Class="Cinema.Admin.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewmodel="clr-namespace:Cinema.Admin.ViewModel"
        mc:Ignorable="d"
        Title="MainWindow" WindowState="Maximized">
    <Grid>
        <TabControl>
            <TabItem Header="Új film" DataContext="{Binding Movie}">
                <Grid Margin="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Label Grid.Row="0" Grid.Column="0" Content="Cím" />
                    <TextBox Grid.Row="0" Grid.Column="1" Margin="5"
                            Text="{Binding Title, UpdateSourceTrigger=PropertyChanged}" />

                    <Label Grid.Row="1" Grid.Column="0" Content="Rendező" />
                    <TextBox Grid.Row="1" Grid.Column="1" Margin="5"
                            Text="{Binding Director, UpdateSourceTrigger=PropertyChanged}" />

                    <Label Grid.Row="2" Grid.Column="0" Content="Szinopszis" />
                    <TextBox Grid.Row="2" Grid.Column="1" Margin="5"
                            Text="{Binding Synopsis, UpdateSourceTrigger=PropertyChanged}" />

                    <Label Grid.Row="3" Grid.Column="0" Content="Hossz (perc)" />
                    <TextBox Grid.Row="3" Grid.Column="1" Margin="5"
                            Text="{Binding Length, UpdateSourceTrigger=PropertyChanged}" />

                    <Label Grid.Row="4" Grid.Column="0" Content="Plakát" VerticalAlignment="Center" />
                    <Image Grid.Row="4" Grid.Column="1" Margin="5" HorizontalAlignment="Left"
                            Height="240" Width="180" MaxHeight="240" MaxWidth="180"
                            Source="{Binding Image, TargetNullValue={x:Null}}" />

                    <Button Grid.Row="5" Grid.Column="1" Content="Csere"
                            HorizontalAlignment="Center" VerticalAlignment="Center"
                            Width="73"  Height="21"  Margin="5"
                            Command="{Binding ChangeImageCommand}"/>

                    <Button Grid.Row="6" Grid.ColumnSpan="2" Content="Új film felvitele"
                            HorizontalAlignment="Center" VerticalAlignment="Center"
                            Padding="2"  Margin="5"
                            IsDefault="True"
                            Command="{Binding NewMovieCommand}"/>
                </Grid>
            </TabItem>
            <TabItem Header="Új előadás">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
            <TabItem Header="Jegykiadás">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
        </TabControl>

    </Grid>
</Window>
